{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "olive/*": [
        "src/*"
      ],
      "pako/dist/pako": [
        "node_modules/pako/dist/pako"
      ]
    },
    "module": "amd",
    "target": "es6",
    "outFile": "dist/bundle.js",
    "inlineSourceMap": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false
  },
  "exclude": [
    "typings",
    "dist"
  ],
  "compileOnSave": true
}