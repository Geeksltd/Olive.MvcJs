{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "olive/*": ["src/*"]
        },
        "module": "amd",
        "target": "es5",
        "outDir": "dist",
        "declaration": true,
        "esModuleInterop": true,
        "declarationDir": "typings",
        "noImplicitUseStrict": true,
        "inlineSourceMap": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false
    },
    "exclude": [
        "typings",
        "dist"
    ],
    "compileOnSave": true
}