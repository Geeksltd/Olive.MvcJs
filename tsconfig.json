{
    "compilerOptions": {
        "baseUrl": ".",
      "paths": {
        "olive/*": [ "src/*" ],
        "pako": [
          "node_modules/pako/dist/pako"
        ]
      },
        "module": "amd",
        "target": "es5",  
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "typings",
        "noImplicitUseStrict": true,
        "inlineSourceMap": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false
    },
    "exclude": [
        "typings",
        "dist"
    ],
    "compileOnSave": true     
}

