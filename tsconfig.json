{
    "compilerOptions": {
        "baseUrl": ".",
      "paths": {
        "olive/*": [ "src/*" ],
        "pako/dist/pako": [ "node_modules/pako/dist/pako" ]
      },

        "module": "amd",
        "target": "ES2018",  
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "typings",
        "inlineSourceMap": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false
    },
    "exclude": [
        "typings",
        "dist"
    ],
    "compileOnSave": true     
}
